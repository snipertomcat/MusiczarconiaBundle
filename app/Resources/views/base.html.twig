<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    {% block head %}

    {% endblock %}
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#"><img src="{{ asset('bundles/stcbase/images/logo.png') }}" /></a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="active navbar-text"><a href="{{ url('stc_musiczarconia_homepage') }}">Home</a></li>
                <li class="navbar-text"><a href="{{ url('stc_musiczarconia_studios') }}">Studios</a></li>
                <li class="navbar-text"><a href="#contact">Contact</a></li>
                <li class="navbar-text" style="margin-left: 500px">
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            <button type="button" class="btn btn-success btn-large" onclick="window.location.href = '{{ url('fos_user_registration_register') }}'">
                                Logged in as: {{ app.user.username}} |
                                <a href="{{ path('fos_user_security_logout') }}" class="navbar-link" style="color:white; font-weight: bold">
                                    Logout
                                </a>
                            </button>
                        {% else %}
                            <button type="button" class="btn btn-success btn-large" onclick="window.location.href = '{{ url('fos_user_security_login') }}'">
                                <a href="{{ path('fos_user_security_login') }}" class="navbar-link" style="color:white; font-weight: bold">Login</a>
                            </button>
                        {% endif %}
                    </button>
                </li>
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</div>

<div class="container" style="margin-top: 100px">

    <div class="starter-template">
        {% block content %}{% block fos_user_content %}{% endblock %}{% endblock %}
    </div>

</div><!-- /.container -->
</body>
{% block javascripts %}{% endblock %}
</html>
